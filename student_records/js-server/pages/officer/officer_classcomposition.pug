doctype html
html
  include ../base/head.pug
  body
    include ../base/navbar.pug
    include ../base/sidebar.pug
    div(class='container sidebarContainer')
      div(class='row')
        h1(class='title') Class Composition
      div(class='row')
        // start
        h1 Pre-selected-options
        select#pre-selected-options(multiple='multiple')
          option(value='elem_1' selected='') elem 1
          option(value='elem_2') elem 2
          option(value='elem_3') elem 3
          option(value='elem_4' selected='') elem 4
          option(value='elem_100') elem 100
        // ends
        // jQuery
        // script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0/jquery.min.js')
