// Those variables should be in every page
- var page = "Class composition"
- var loggedIn = true;
- var user = "officer"
- var active = "Class composition"
    

doctype html
html
  include ../base/head.pug
  body
    include ../base/navbar.pug
    include ../base/sidebar.pug
    div(class='container sidebarContainer')
      div(class='row')
        h1(class='title') Class #{className} composition
      div(class='row')
        if flag_ok == 1
          h2(class = 'ok_msg') &nbsp #{message} &nbsp
        else
          h2(class = 'err_msg') &nbsp #{message} &nbsp
      form(method='POST' action="/officer/class/"+classID+"/up_class")
        div(class='row' style='margin-top: 40px;')
            div(class='col-lg-3')
            div(class='col-lg-6 col-xs-12')
                div.form-group
                    label(for='list1') Student without class
                    for elem in Students
                        input(type='checkbox' name=elem.id value="0" class="form-control")
                        label #{elem.name}
        div(class='row')
            div(class='col-sm-8 col-lg-6')
            div(class='col-sm-4 col-lg-3 col-xs-10')
                input(type='SUBMIT' value='Modify class' class='btn blockButton' style='margin-top:24px; padding: 6px 10px; margin-left:25%; width:75%;')
        div(class='row')
            div(class='col-lg-3')
            div(class='col-lg-6 col-xs-12')
                div.form-group
                    label(for='list1') Student in #{className} class
                    for elem in Class
                        input(type='checkbox' name=elem.id value="1" class="form-control")
                        label #{elem.name}

