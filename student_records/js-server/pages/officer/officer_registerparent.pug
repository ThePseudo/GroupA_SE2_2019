// Those variables should be in every page
- var page = "Register parent"
- var loggedIn = true;
- var user = "officer"
- var active = "Register parent"

doctype html
html
  include ../base/head.pug
  body
    include ../base/navbar.pug
    include ../base/sidebar.pug
    div(class='container sidebarContainer')
      div(class='row')
        h1(class='title') Register parent
      div(class='row')
        if flag_ok == 1
          h2(class = 'ok_msg') &nbsp #{message} &nbsp
        else
          h2(class = 'err_msg') &nbsp #{message} &nbsp
      form(method='POST' action='/officer/enroll_parent')
        div(class='row' style='margin-top: 40px;')
          div(class='col-lg-3')
          div(class='col-lg-6 col-xs-12')
            div.form-group
              label(for='name') First Name:
              input(type='text' placeholder='First Name' name='name' class="form-control" required)
        div(class='row')
          div(class='col-lg-3')
          div(class='col-lg-6 col-xs-12')
            div.form-group
              label(for='surname') Last Name:
              input(type='text' placeholder='Last Name' name='surname' class="form-control" required)
        div(class='row')
          div(class='col-lg-3')
          div(class='col-lg-6 col-xs-12')
            div.form-group
              label(for='SSN') SSN:
              input(type='text' placeholder='SSN' name='SSN' class="form-control" required)
        div(class='row')
          div(class='col-lg-3')
          div(class='col-lg-6 col-xs-12')
            div.form-group
              label(for='Email') Email:
              input(type='email' placeholder='Email' name='email' class="form-control" required)
        div(class="row")
          div(class='col-sm-5 col-lg-6')
          div(class='col-sm-4 col-lg-3 col-xs-10')
            input(type='SUBMIT' value='Insert parent' class='btn blockButton' style='margin-top:24px; padding: 6px 10px; margin-left:25%; width:75%;')
