//- Those variables should be in every page
- var page = "Choose student"
- var loggedIn = true
- var user = "parent"
- var active = "Choose student"

//- Inputs: number of students (numStudents) + list of students (studentList)

- var studentsLeft = numStudents

mixin studentBtn(text)
  //-div(class='hidden-sm hidden-md hidden-lg col-xs-1')
  //-div(class='col-sm-4 col-xs-10 smallMarginTop')
  a(href = 'parent_courselist')
  button(class='btn blockButton_child') 
    img(src= '../../images/child.png' style='width:50px;height:50px;')
    a(class='noLinkTitle' style='margin-top: 20px;')= text

mixin printStudents(studentList)
  div(class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups")
    div(class="btn-group" role="group" aria-label="First group")
      for student in studentList
        +studentBtn(student)


doctype html
html
  include ../base/head.pug
  body
    include ../base/navbar.pug
    div(class="container")
      div(class='row')
        h1(class='title') Choose student
      div(class='row')
        h2(class = 'title2') Who do you want to know about?
      div(class='row')
        +printStudents(studentList)
    
    div(class="container")
      div(class='row')
        h1(class='title') General Communication
        table(class='table')
          tr(class='table-row-base')
                th Id Communication
                th Date
                th Object
          each comm in communicationList
            tr
              td #{comm.id}
              td #{comm.date}
              td #{comm.text}
