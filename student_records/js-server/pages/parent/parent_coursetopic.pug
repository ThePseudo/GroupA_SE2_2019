//- Those variables should be in every page
- var page = pageId
- var loggedIn = true
- var user = "parent"
- var active = ""

//- variables: subject, topics[] {date, description}

mixin rowTopic(date, description)
  tr(class="table-row table-row-base")
    td= (date.getDate() + "/" + date.getMonth() + "/" + date.getFullYear())
    td= date
    td= description

doctype html
html
  include ../base/head.pug
  body
    include ../base/navbar.pug
    include ../base/sidebar.pug
    div(class='container')
      div(class='row')
        h1(class='title') #{subject} topics
      div(class='row')
        div(class="col-lg-3 col-sm-2 col-xs-1")
        div(class="col-lg-6 col-sm-8 col-xs-10" style='align-content:center;')
          table(style="width:100%; text-align:center; align-content:center" class="table table-bordered")
            tr(class='table-row-base')
              th Date
              th Topic
            for topic in topics
              +rowTopic(topic.date, topic.description)