//- Those variables should be in every page. ALWAYS PASS childID, fullName
- var page = "Courses"
- var loggedIn = true
- var user = "parent"
- var active = "Show courses"

//- Varialbes: childID, courses[] {id, name, color, newRow}, course_hours[7][6] (it only has colors)

- var current_row = 0;

mixin subjectButton(id, subject, color)
  a(href= "/parent/"+childID+"/course/"+id class="noLinkTitle")
    button(class="btn blockButton noLinkTitle")
      div(style="width:20px; height:20px; border:1px solid black; display:inline-block; margin-right:20px; background:"+color)
      =subject

doctype html
html
  include ../base/head.pug
  body
    include ../base/navbar.pug
    include ../base/sidebar.pug
    div(class='container sidebarContainer')
      //- Time table
      div(class='row')
        h1(class='title') Time table
      div(class='row')
        div(class='col-xs-12')
          table(style="width:100%; text-align:center; align-content:center" class="table table-bordered")
            tr(class="table-row-base hidden-xs")
              th(style="width:10%;") Hour
              th(style="width:15%;") Monday
              th(style="width:15%;") Tuesday
              th(style="width:15%;") Wednesday
              th(style="width:15%;") Thursday
              th(style="width:15%;") Friday
              th(style="width:15%;") Saturday
            tr(class="table-row-base hidden-sm hidden-md hidden-lg")
              th(style="width:10%;") H
              th(style="width:15%;") Mon
              th(style="width:15%;") Tue
              th(style="width:15%;") Wed
              th(style="width:15%;") Thur
              th(style="width:15%;") Fri
              th(style="width:15%;") Sat
            while current_row < 7
              tr(class="table-row-base")
                td #{current_row+1}
                td(style="background:#"+course_hours[current_row][0])
                td(style="background:#"+course_hours[current_row][1])
                td(style="background:#"+course_hours[current_row][2])
                td(style="background:#"+course_hours[current_row][3])
                td(style="background:#"+course_hours[current_row][4])
                td(style="background:#"+course_hours[current_row][5])
              - current_row++;
      //- Course list
      div(class='row')
        h1(class='title') Courses
      for course in courses
        if(course.newRow==true)
          div(class='row hidden-xs' style="margin: 20px;")
          div(class='col-sm-2')
        div(class='col-xs-1 hidden-sm hidden-md hidden-lg')
        div(class='col-xs-10 col-sm-4 smallMarginTop')
          +subjectButton(course.id, course.name, "#"+course.color)
