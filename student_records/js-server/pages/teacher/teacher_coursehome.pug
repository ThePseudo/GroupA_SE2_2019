//- Those variables should be in every page. Always pass fullName
- var page = courseName
- var loggedIn = true
- var user = "teacher"
- var active = "Show course home"

//- Uses variable: courseName, childID

mixin button(name, href)
  div(class="row" style="margin : 20px")
    div(class="col-xs-1 col-lg-4")
    div(class="col-xs-10 col-lg-4")
      a(href= "/parent/"+childID+"/course/"+courseID+"/"+href class="noLinkTitle")
        button(class="btn blockButton noLinkTitle")=name

doctype html
html
  include ../base/head.pug
  body
    include ../base/navbar.pug
    include ../base/sidebar.pug
    div(class="container sidebarContainer")
      a(href="/teacher/teacher_home" class="noLinkTitle backButton")
        span(class="glyphicon glyphicon-menu-left backButton")
      div(class="row")
        h1(class='title') #{courseName}
      div(class="row")
        h2(class = 'title2') Student's List
      +button("Marks", "marks")
      +button("Topics", "topics")
      +button("Material and homeworks", "material_homework")
