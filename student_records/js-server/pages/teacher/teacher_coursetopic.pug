//- Those variables should be in every page
- var page = "Daily topic"
- var loggedIn = true;
- var date = new Date();
- var user= "teacher"
- var active= "Insert daily topic"

//- variables used: fullName, dateString

doctype html
html
  include ../base/head.pug
  body
    include ../base/navbar.pug
    include ../base/sidebar.pug
    div(class='container')
      div(class='row')
        h1(class='title') Record daily topic
        div(class='row')
        if flag_ok == 1
          h2(class = 'ok_msg') &nbsp #{message} &nbsp
        else
          h2(class = 'err_msg') &nbsp #{message} &nbsp
      form(method='POST' action="/teacher/class/" + classid +"/course/" + courseid + "/reg_topic" id="regform")
        div(class='row' style='margin-top: 40px;')
          div(class='col-sm-3')
          div(class='col-sm-6')
            div.form-group
              label(for='course') Subject:
              select(placeholder='Subject' name='subject' class='form-control' required)
                for subject_name in subject_array
                  option(value=subject_name) #{subject_name}
        div(class='row')
          div(class='col-sm-3')
          div(class='col-sm-6')
            div.form-group
              label(for='date') Date:
              input(type='date' name='date' value=dateString class="form-control" required)    
        div(class='row')
          div(class='col-sm-3')
          div(class='col-sm-6')
            div.form-group
              label(for='desc') Description:
              textarea(name="description" form="regform" class="form-control" required)
        div(class='row')
          div(class='col-sm-6')
          div(class='col-sm-3')
            input(type='SUBMIT' value='Record topic' class='btn blockButton' style='margin-top: 24px; margin-left: 25%; padding: 6px 10px; width: 75%;')
