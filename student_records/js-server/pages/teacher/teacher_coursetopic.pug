//- Those variables should be in every page
- var page = "Daily topic"
- var loggedIn = true;
- var date = new Date();
- var user= "teacher"
- var active= "Insert daily topic"

//- variables used: fullName, dateString

doctype html
html
  include ../base/head.pug
  body
    include ../base/navbar.pug
    include ../base/sidebar.pug
    div(class='container')
      div(class='row')
        h1(class='title') Record daily topic
      form(method='POST' action='/reg_topic' id="regform")
        div(class='row' style='margin-top: 40px;')
          div(class='col-sm-3')
          div(class='col-sm-6')
            div.form-group
              label(for='course') Subject:
              input(type='text' placeholder='Subject' name='course' class='form-control')
        div(class='row')
          div(class='col-sm-3')
          div(class='col-sm-6')
            div.form-group
              label(for='date') Date:
              input(type='date' name='date' value=dateString max=dateString class="form-control")    
        div(class='row')
          div(class='col-sm-3')
          div(class='col-sm-6')
            div.form-group
              label(for='desc') Description:
              textarea(name="desc" form="regform" class="form-control")
        div(class='row')
          div(class='col-sm-6')
          div(class='col-sm-3')
            input(type='SUBMIT' value='Record topic' class='btn blockButton' style='margin-top: 24px; margin-left: 25%; padding: 6px 10px; width: 75%;')
