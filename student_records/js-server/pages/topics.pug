// Those variables should be in every page
- var page = "Daily topic"
- var loggedIn = false;
- var date = new Date();
- var user= "teacher"

- var dateString = date.getFullYear() + "-" + date.getMonth() + "-" + date.getDate()

doctype html
html
  include base/head.pug
  body
    include base/navbar.pug
    include base/sidebar.pug
    div(class='container')
      div(class='row')
        h1(class='title') Record daily topic
      form(method='POST' action='/reg_topic' id="regform")
        div(class='row' style='margin-top: 40px;')
          div(class='col-sm-4')
          div(class='col-sm-4')
            div.form-group
              label(for='course') Subject:
              input#name.form-control(type='text', placeholder='Subject' name='course')
        div(class='row')
          div(class='col-sm-4')
          div(class='col-sm-4')
            div.form-group
              label(for='date') Date:
              input#name.form-control(type='date', name='date' value=dateString max=dateString)    
        div(class='row')
          div(class='col-sm-4')
          div(class='col-sm-4')
            div.form-group
              label(for='class') Class:
              input#class.form-control(type='text', placeholder='Class' name='class')
        div(class='row')
          div(class='col-sm-4')
          div(class='col-sm-4')
            div.form-group
              label(for='desc') Description:
              textarea(name="desc" form="regform" class="form-control")
        div(class='row')
          div(class='col-sm-6')
          div(class='col-sm-4')
            input(type='SUBMIT' value='Record topic' class='btn blockButton' style='margin-top: 24px; margin-left: 56px; padding: 6px 10px; width: 60%;')