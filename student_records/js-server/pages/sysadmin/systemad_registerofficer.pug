//- Those variables should be in every page
- var page = "Register officer"
- var loggedIn = true;
- var user = "sysadmin"
- var active = "Register officer"

//- Varialbes used: msgClass, msg

doctype html
html
  include ../base/head.pug
  body
    include ../base/navbar.pug
    include ../base/sidebar.pug
    div(class='container')
      div(class='row')
        h1(class='title') Enroll officer
      if msg != ""
        div(class="row")
          h2(class=msgClass) #{msg}
      div(class="row")
        div(class="col-xs-12")
          form(method='POST' action='/admin/enroll/officer')
            div(class='row' style='margin-top: 40px;')
              div(class='col-sm-4')
              div(class='col-sm-4')
                div.form-group
                  label(for='name') First Name:
                  input(type='text' placeholder='First Name' name='name' class="form-control" required)
            div(class='row')
              div(class='col-sm-4')
              div(class='col-sm-4')
                div.form-group
                  label(for='surname') Last Name:
                  input(type='text' placeholder='Last Name' name='surname' class="form-control" required)
            div(class='row')
              div(class='col-sm-4')
              div(class='col-sm-4')
                div.form-group
                  label(for='SSN') SSN:
                  input(type='text' placeholder='SSN' name='SSN' class="form-control" required)
            div(class='row')
              div(class='col-sm-4')
              div(class='col-sm-4')
                div.form-group
                  label(for='Email') Email:
                  input(type='email' placeholder='Email' name='email' class="form-control" required)
            div(class="row")
              div(class='col-sm-5 col-lg-6')
              div(class='col-sm-4 col-lg-3 col-xs-10')
                input(type='SUBMIT' value='Insert officer' class='btn blockButton' style='margin-top: 24px; padding: 6px 10px; width: 75%;')