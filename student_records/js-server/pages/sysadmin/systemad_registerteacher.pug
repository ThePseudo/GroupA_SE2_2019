//- Those variables should be in every page
- var page = "Register teacher"
- var loggedIn = true;
- var user = "sysadmin"
- var active = "Register teacher"

//- Variables used: msgClass, msg

doctype html
html
  include ../base/head.pug
  body
    include ../base/navbar.pug
    include ../base/sidebar.pug
    div(class='container')
      div(class='row')
        h1(class='title') Enroll teacher
      if msg != ""
        div(class="row")
          h2(class=msgClass) #{msg}
      div(class="row")
        div(class="col-xs-12")
          form(method='POST' action='/admin/enroll/teacher')
            div(class='row' style='margin-top: 40px;')
              div(class='col-sm-4')
              div(class='col-sm-4')
                div.form-group
                  label(for='name') First Name:
                  input(type='text' placeholder='First Name' name='name' class="form-control" required)
            div(class='row')
              div(class='col-sm-4')
              div(class='col-sm-4')
                div.form-group
                  label(for='surname') Last Name:
                  input(type='text' placeholder='Last Name' name='surname' class="form-control" required)
            div(class='row')
              div(class='col-sm-4')
              div(class='col-sm-4')
                div.form-group
                  label(for='SSN') SSN:
                  input(type='text' placeholder='SSN' name='SSN' class="form-control" required)
            div(class='row')
              div(class='col-sm-4')
              div(class='col-sm-4')
                div.form-group
                  label(for='Email') Email:
                  input(type="email" placeholder='Email' name='email' class="form-control" required)
            div(class='row')
              div(class='col-sm-4')
              div(class='col-sm-4')
                div.form-group
                  label(for='Coordinator') It is a Coordinator? (Optional):
                  input(type="checkbox" name='coordinator' class="form-control")
                  label(for='ClassCoordinator') For which Class? (Optional):
                  select(name='classcoordinator')
                      option(value="select") Select
                      each classitem in classlist
                        option(value=classitem.id) #{classitem.class_name}
            div(class="row")
              div(class='col-sm-5 col-lg-6')
              div(class='col-sm-4 col-lg-3 col-xs-10')
                input(type='SUBMIT' value='Insert teacher' class='btn blockButton' style='margin-top: 24px; padding: 6px 10px; width: 75%;')