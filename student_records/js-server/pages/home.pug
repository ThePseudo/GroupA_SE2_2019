// Those variables should be in every page
- var page = ""
- var loggedIn = false;

mixin loginBtn(text, image, href)
  div(class='hidden-sm hidden-md hidden-lg row')
  div(class='hidden-sm hidden-md hidden-lg col-xs-1')
  div(class='hidden-xs col-sm-1')
  div(class='col-sm-5 col-xs-10' style="margin-bottom:32px")
    a(href = href)
      button(class='btn blockButton')
        div(class='row')
          img(src= image style='width:100%;height:auto;')
        div(class='row')
          a(class='noLinkTitle' style='margin-top: 32px;')= text


doctype html
html
  include base/head.pug
  body
    include base/navbar.pug
    div(class='container')
      div(class='row')
        h1(class='title') Welcome to BB
      div(class='row')
        h2(class = 'title2') Who are you?
      div(class='row')
        div(class='col-xs-12')
          +loginBtn('Parent', '../images/parent.png', '/auth_router/login_parent')
          +loginBtn('Teacher', '../images/teacher.png', '/auth_router/login_teacher')
          +loginBtn('Administrative Officer', '../images/teacher.png', '/auth_router/login_officer')
          +loginBtn('System Administrator', '../images/teacher.png', '/auth_router/login_admin')
